@model RegisterVM
@{
    ViewData["Title"] = "Register";
}

<h2>Register</h2>

<form asp-controller="Users" asp-action="Register" method="post">
    <p><span class="field-validation-error">@(Model.Message != null ? Model.Message : "")</span></p>
    <p>@Html.ValidationMessageFor(m => m.Password)</p>
    <p>@Html.ValidationMessageFor(m => m.Username)</p>

    <input asp-for="Username" placeholder="Username" />
    
    <input asp-for="Password" placeholder="Password" />
    
    <button type="submit">Go</button>
</form>